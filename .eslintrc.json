{
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },
    "extends": [
        "standard-with-typescript"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "tsconfig.json"
        ]
    },
    "rules": {
        "@typescript-eslint/semi": [
            2,
            "always"
        ],
        "@typescript-eslint/comma-dangle": [
            2,
            "never"
        ],
        "@typescript-eslint/strict-boolean-expressions": 0,
        "@typescript-eslint/indent": [
            "error",
            4
        ]
    }
}